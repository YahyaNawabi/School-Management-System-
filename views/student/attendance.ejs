<% layout('layout/boilerplate') %>

<div class="container mt-4">
  <h1>Student Attendance</h1>
  <form action="/student/attendance">
    <table class="table table-bordered table-hover mt-3">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Age</th>
          <th>Present</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(student => { %>
          <tr>
            <td><%= student.id %></td>
            <td><%= student.name %></td>
            <td><%= student.last %></td>
            <td><%= student.age %></td>
            <td class="text-center">
              <input type="checkbox" name="attendance" value="<%= student.id %>" />
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <div class="d-flex justify-content-end">
      <a href="/student/attendance"><button type="submit" class="btn btn-primary">Submit Attendance</button></a>
    </div>
  </form>
</div>
