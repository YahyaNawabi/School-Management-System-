<% layout('layout/boilerplate') %>

<div class="container">
    <h1>Exam Schedule</h1>
    <table class="table table-hover">
        <thead>
          <tr>
            <th>Exam ID</th>
            <th>Subject</th>
            <th>Date</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
          <% for (let exam of exams) { %>
            <tr>
              <td><%= exam.id %></td>
              <td><%= exam.subject %></td>
              <td><%= exam.date %></td>
              <td><%= exam.time %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
</div>
